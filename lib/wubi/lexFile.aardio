	combine = function(str){
		var cachCharCodes = this.getCachCharCodes();
		
		var arr = ..string.split(str);
		if(#arr<2){return;}
		
		var codes = {}
		codes[1] = cachCharCodes[arr[1]];
		codes[2] = cachCharCodes[arr[2]];
		
		if(!(codes[1]&&codes[2])){return;}
		
		if(arr[3]){
			codes[3] = cachCharCodes[arr[3]];
